			<button id='showSMsgList'>送信箱</button>
		</div><br>
		
		<script>
		$('#showRMsgList').click(function(){
		
				document.location.href='/action/Msg_showRMsgList';
			
		})
		
		
		$('#showSMsgList').click(function(){
		
				document.location.href='/action/Msg_showSMsgList';
			
		})
